load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "common.go",
        "onlySrcChange.go",
    ],
    importpath = "github.com/knative/test-infra/tools/coverage/testTarget/subPkg1",
    visibility = ["//visibility:public"],
)

go_test(
    name = "go_default_test",
    srcs = ["onlySrcChange_test.go"],
    embed = [":go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
